<h1>New Student</h1>

<%= form_for @student do |f| %> 
  <% if @student.errors.any? %>
    <h2> Form is invalid </h2>
    <% for message in @student.errors.full_messages %>
      <h3> <%= message %>  </h3>
    <% end %>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.radio_button :admin, false %><%= f.label :admin, "I am a student" %><br>
    <%= f.radio_button :admin, true %><%= f.label :admin, "I am an administrator" %><br>
  </p>
    
  <p>
    <%= f.submit %>
  </p>
<% end %>