<h1>Students</h1>

<% if session[:student_id] %>
  Hello <%= Student.find(session[:student_id]).name %> 
  &nbsp;&nbsp;&nbsp;&nbsp;
  <%= link_to 'Edit profile', edit_student_path(Student.find(session[:student_id])) %>
  <%= link_to "I'm here!", create_attendance_path %>
  <%= link_to 'Logout', logout_session_path %>
<% else %>
  <%= link_to 'Login', signin_session_path %>
  <%= link_to 'Sign up', new_student_path %>
<% end %> 

<%= link_to 'View all Attendances', attendances_path %>

<%= form_tag(students_path , method: :get) do %>

<%= date_field_tag(:selected_date, params[:attended_on] %>
<%= submit_tag("View Date's Attendances")
  
<% end %>

<%= if params[:selected_date] == nil %>
<%= params[:selected_date] = Date.today %>
<% end %>
  

<br><br>
<h3>Seat 1</h3>
<% Student.in_seat(1, params[:selected_date]).each do |student| %>
